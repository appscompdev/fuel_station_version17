<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_detailed" model="report.paperformat">
        <field name="name">Detailed Report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="header_spacing">40</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">130</field>
    </record>

    <record id="report_action_detailed" model="ir.actions.report">
        <field name="name">Detailed Report</field>
        <field name="model">detailed.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petrol_station_dashboard.detailed_template</field>
        <field name="report_file">petrol_station_dashboard.detailed_template</field>
        <field name="paperformat_id" ref="paperformat_detailed"/>
    </record>

    <template id="detailed_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                        <h2>
                            <strong>Detailed Report</strong>
                        </h2>
                    </center>
                    <br/>
                    <table class="table table-borderless" style="border: 0px">
                        <tr align="left" style="border: 0px">
                            <td style="border: 0px">
                                <strong>Report From</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td align="right" style="border: 0px">
                                <span t-esc="start_date.strftime('%d-%m-%Y')"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px;" align="left">
                                <strong>Report To</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="end_date.strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 0px" align="left">
                                <strong>Generated By</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px" align="right">
                                <span t-field="res_company.env.user.name"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Generated Date</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <t t-if="stock_tt_total">
                        <h3 align="center">
                            <strong>STOCK SUMMARY</strong>
                        </h3>
                        <br/>
                        <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                            <thead>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    S.No
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Date
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Qty
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Price
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Total Amount
                                </th>
                            </thead>
                            <tbody>
                                <t t-set="s_no" t-value="0"/>
                                <t t-foreach="stock_tt_total" t-as="dd">
                                    <t t-set="total" t-value="0"/>
                                    <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                        <td class="p-1 m-1" colspan="5">
                                            <strong t-esc="dd['name']"/>
                                        </td>
                                    </tr>

                                    <t t-foreach="dd['all_val']" t-as="ww">
                                        <t t-if="ww['s_qty']">
                                            <t t-set="s_no" t-value="s_no+1"/>
                                            <t t-set="total" t-value="total + ww['total']"/>
                                            <tr class="p-1 m-1" style="page-break-inside: avoid;">
                                                <td style="text-align:center" class="p-1 m-1">
                                                    <span t-esc="s_no"/>
                                                </td>
                                                <td class="p-1 m-1" t-esc="ww['date'].strftime('%d-%m-%Y')"/>
                                                <td style="text-align:right" class="p-1 m-1" t-esc="ww['s_qty']"/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['dd_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['total'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr>
                                        <td style="text-align:right" colspan="4">
                                            <strong>TOTAL</strong>
                                        </td>
                                        <td style="text-align:right">
                                            <span t-esc="float('%.2f' % total)"
                                                  t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                    </t>
                    <t t-if="product_tt_total">
                        <br/>
                        <br/>
                        <h3 align="center">
                            <strong>USER SUMMARY</strong>
                        </h3>
                        <br/>
                        <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                            <thead>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    S.No
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Date
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Qty
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Price
                                </th>
                                <th class="text-center"
                                    style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Total Amount
                                </th>
                            </thead>
                            <tbody>
                                <t t-set="s_no" t-value="0"/>
                                <t t-foreach="product_tt_total" t-as="dd">
                                    <t t-set="total" t-value="0"/>
                                    <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                        <td class="p-1 m-1" colspan="5">
                                            <strong t-esc="dd['name']"/>
                                        </td>
                                    </tr>

                                    <t t-foreach="dd['val']" t-as="ww">
                                        <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                            <td class="p-1 m-1" colspan="5">
                                                <strong t-esc="ww['name']"/>
                                            </td>
                                        </tr>
                                        <t t-foreach="ww['all_val']" t-as="w">
                                            <t t-if="w['s_qty']">
                                                <t t-set="s_no" t-value="s_no+1"/>
                                                <t t-set="total" t-value="total + w['total']"/>
                                                <tr class="p-1 m-1" style="page-break-inside: avoid;">
                                                    <td style="text-align:center" class="p-1 m-1">
                                                        <span t-esc="s_no"/>
                                                    </td>
                                                    <td class="p-1 m-1" t-esc="w['date'].strftime('%d-%m-%Y')"/>
                                                    <td style="text-align:right" class="p-1 m-1" t-esc="w['s_qty']"/>
                                                    <td style="text-align:right" class="p-1 m-1"
                                                        t-esc="float('%.2f' % w['dd_price'])"
                                                        t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                    <td style="text-align:right" class="p-1 m-1"
                                                        t-esc="float('%.2f' % w['total'])"
                                                        t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                </tr>
                                            </t>
                                        </t>
                                        <tr>
                                            <td style="text-align:right" colspan="4">
                                                <strong>TOTAL</strong>
                                            </td>
                                            <td style="text-align:right">
                                                <span t-esc="float('%.2f' % total)"
                                                      t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                    </t>
                    <t t-if="nozzle_tt_total">
                        <br/>
                        <br/>
                        <h3 align="center">
                            <strong>NOZZLE SUMMARY</strong>
                        </h3>
                        <br/>
                        <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                            <thead>
                                <th class="text-center"
                                    style="width: 8%;font-weight:bold;background-color: #0048ad;color:#fff;">
                                    S.No
                                </th>
                                <th class="text-center"
                                    style="width: 8%;font-weight:bold;background-color: #0048ad;color:#fff;">
                                    Date
                                </th>
                                <th class="text-center"
                                    style="width: 8%;font-weight:bold;background-color: #0048ad;color:#fff;">
                                    Qty
                                </th>
                                <th class="text-center"
                                    style="width: 8%;font-weight:bold;background-color: #0048ad;color:#fff;">
                                    Price
                                </th>
                                <th class="text-center"
                                    style="width: 8%;font-weight:bold;background-color: #0048ad;color:#fff;">
                                    Total Amount
                                </th>
                            </thead>
                            <tbody>
                                <t t-set="s_no" t-value="0"/>
                                <t t-foreach="nozzle_tt_total" t-as="dd">
                                    <t t-set="total" t-value="0"/>
                                    <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                        <td class="p-1 m-1" colspan="5">
                                            <strong t-esc="dd['name']"/>
                                        </td>
                                    </tr>

                                    <t t-foreach="dd['all_val']" t-as="ww">
                                        <t t-if="ww['s_qty']">
                                            <t t-set="s_no" t-value="s_no+1"/>
                                            <t t-set="total" t-value="total + ww['total']"/>
                                            <tr class="p-1 m-1" style="page-break-inside: avoid;">
                                                <td style="text-align:center" class="p-1 m-1">
                                                    <span t-esc="s_no"/>
                                                </td>
                                                <td class="p-1 m-1" t-esc="ww['date'].strftime('%d-%m-%Y')"/>
                                                <td style="text-align:right" class="p-1 m-1" t-esc="ww['s_qty']"/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['dd_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['total'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </tr>
                                        </t>
                                    </t>
                                    <tr>
                                        <td style="text-align:right" colspan="4">
                                            <strong>TOTAL</strong>
                                        </td>
                                        <td style="text-align:right">
                                            <span t-esc="float('%.2f' % total)"
                                                  t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
