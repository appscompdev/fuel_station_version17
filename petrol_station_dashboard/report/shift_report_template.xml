<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_shift_base_report" model="report.paperformat">
        <field name="name">Shift Base Report Paper format</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">45</field>
        <field name="header_spacing">40</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">130</field>
    </record>

    <record id="report_action_shift_base" model="ir.actions.report">
        <field name="name">Shift Base Report</field>
        <field name="model">shift.base.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petrol_station_dashboard.report_shift_wise_template</field>
        <field name="report_file">petrol_station_dashboard.report_shift_wise_template</field>
        <field name="paperformat_id" ref="paperformat_shift_base_report"/>
    </record>

    <template id="report_shift_wise_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div align="center">
                        <h2>
                            <span>Shift Base Report</span>
                        </h2>
                    </div>
                    <table class="table table-borderless" style="border: 0px">
                        <tr align="left" style="border: 0px">
                            <td style="border: 0px">
                                <strong>Report From</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td align="right" style="border: 0px">
                                <span t-esc="start_date.strftime('%d-%m-%Y')"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Report To</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="end_date.strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 0px" align="left">
                                <strong>Generated By</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px" align="right">
                                <span t-field="res_company.env.user.name"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Generated Date</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                    </table>
                    <br/>

                    <t t-foreach="data" t-as="data_val">
                        <center>
                            <h4>
                                <span>
                                    <t t-esc="data_val['shift_name']"/>
                                </span>
                            </h4>
                        </center>
                        <t t-foreach="data_val['value']" t-as="data_pump">
                            <t t-if="data_pump['pump_val']">
                                <div class="col-6">
                                    <h5>
                                        <span>
                                            <b>Employee</b>
                                        </span>
                                        <strong class="px-2">:</strong>
                                        <span t-esc="data_pump['employee']"/>
                                    </h5>
                                </div>
                                <!--                            <t t-if="data_pump['pump_val']">-->
                                <table class="table table-sm table-bordered mt-4"
                                       style="page-break-inside: avoid; border-color:#000;">
                                    <thead style="page-break-inside: avoid; background-color: #000000; color: #ffffff">
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            S.No
                                        </th>
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Name
                                        </th>
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Start Reading
                                        </th>
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            End Reading
                                        </th>
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Date
                                        </th>
                                        <th class="text-center"
                                            style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Amount
                                        </th>
                                    </thead>
                                    <tbody>
                                        <t t-set="s_no" t-value="1"/>
                                        <t t-set="sub_total" t-value="0"/>

                                        <t t-foreach="data_pump['pump_val']" t-as="pump">
                                            <tr style="page-break-inside: avoid;">
                                                <td class="text-center">
                                                    <span t-esc="s_no"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="pump['name']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="pump['start_reading']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="pump['end_reading']"/>
                                                </td>
                                                <td class="text-center">
                                                    <span t-esc="pump['date']"/>
                                                </td>
                                                <td align="right">
                                                    <span t-esc="pump['amt']"/>
                                                </td>
                                            </tr>
                                            <t t-set="s_no" t-value="s_no+1"/>
                                            <t t-set="sub_total" t-value="sub_total+pump['amt']"/>
                                        </t>
                                        <tr style="page-break-inside: avoid;">
                                            <td colspan="5" style="width: 8%; font-weight:bold">
                                                Total
                                            </td>
                                            <td align="right" style="width: 8%; font-weight:bold">
                                                <span t-field="res_company.currency_id.symbol"/>
                                                <t t-esc="sub_total"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>
