<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_action_customer_outstanding" model="ir.actions.report">
        <field name="name">Customer Outstanding</field>
        <field name="model">customer.outstanding.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petrol_station_dashboard.customer_outstanding_template</field>
        <field name="report_file">petrol_station_dashboard.customer_outstanding_template</field>
    </record>

    <template id="customer_outstanding_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                        <h2>
                            <span>Customer Outstanding Report</span>
                        </h2>
                    </center>
                    <br/>
                    <table class="table table-borderless" style="border: 0px">
                        <tr align="left" style="border: 0px">
                            <td style="border: 0px">
                                <strong>Report From</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td align="right" style="border: 0px">
                                <span t-esc="start_date.strftime('%d-%m-%Y')"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Report To</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="end_date.strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 0px" align="left">
                                <strong>Generated By</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px" align="right">
                                <span t-field="res_company.env.user.name"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Generated Date</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                        <thead style="background-color:  #000000; color: #ffffff">
                            <th class="text-center"
                                style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                S.No
                            </th>
                            <th class="text-center"
                                style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                Name
                            </th>
                            <th class="text-center"
                                style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                Invoices
                            </th>
                            <th class="text-center"
                                style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                Total Amount
                            </th>
                            <th class="text-center"
                                style="width: 8%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                Amount Due
                            </th>
                        </thead>
                        <tbody>
                            <t t-set="s_no" t-value="1"/>
                            <t t-set="sub_total" t-value="0"/>
                            <t t-foreach="data" t-as="partner">
                                <t t-if="partner['value'] > 0">
                                    <tr>
                                        <td class="text-center">
                                            <span t-esc="s_no"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-esc="partner['name']"/>
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="partner['count']"/>
                                        </td>
                                        <td align="right">
                                            <span t-esc="float('%.2f' % partner['total'])"
                                                  t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                        </td>
                                        <td align="right">
                                            <span t-esc="float('%.2f' % partner['value'])"
                                                  t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                        </td>
                                    </tr>
                                    <t t-set="s_no_1" t-value="1"/>
                                    <t t-foreach="partner['invoice']" t-as="inv">
                                        <tr>
                                            <td class="text-center">
                                                <span t-esc="inv['due'].strftime('%d/%m/%Y')"/>
                                            </td>
                                            <td class="text-left" colspan="2">
                                                <span t-esc="inv['inv_name']"/>
                                            </td>
                                            <td align="right">
                                                <span t-esc="float('%.2f' % inv['total'])"
                                                      t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </td>

                                            <td align="right">
                                                <span t-esc="inv['amt']"/>
                                            </td>
                                        </tr>
                                        <t t-set="s_no_1" t-value="s_no_1+1"/>
                                    </t>
                                    <t t-set="s_no" t-value="s_no+1"/>
                                    <t t-set="sub_total" t-value="sub_total+partner['value']"/>
                                </t>
                            </t>

                            <tr>
                                <td colspan="4" align="center" style="width: 8%; font-weight:bold;">
                                    Total
                                </td>
                                <td align="right" style="width: 8%;font-weight:bold">
                                    <span t-esc="float('%.2f' % sub_total)"
                                          t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
