<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_payment_mode" model="report.paperformat">
        <field name="name">Payment Mode Paper formate</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="header_spacing">35</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">140</field>
    </record>
    <record id="report_payment_mode_action" model="ir.actions.report">
        <field name="name">Payment Mode Report</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petrol_station_dashboard.report_payment_mode_template</field>
        <field name="report_file">petrol_station_dashboard.report_payment_mode_template</field>
        <field name="paperformat_id" ref="paperformat_payment_mode"/>
    </record>

    <template id="report_payment_mode_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                        <h2>
                            <span>Payment Mode Report</span>
                        </h2>
                    </center>
                    <br/>
                    <t t-if="data">
                        <table class="table table-borderless" style="border: 0px">
                            <tr align="left" style="border: 0px">
                                <td style="border: 0px">
                                    <strong>Report From</strong>
                                </td>
                                <td style="border: 0px">:</td>
                                <td align="right" style="border: 0px">
                                    <span t-esc="start_date"/>
                                </td>
                                <td style="border: 0px"/>
                                <td style="border: 0px"/>
                                <td style="border: 0px" align="left">
                                    <strong>Report To</strong>
                                </td>
                                <td style="border: 0px">:</td>
                                <td style="border: 0px; background-color: #ffffff;" align="right">
                                    <span t-esc="end_date"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 0px" align="left">
                                    <strong>Generated By</strong>
                                </td>
                                <td style="border: 0px">:</td>
                                <td style="border: 0px" align="right">
                                    <span t-field="res_company.env.user.name"/>
                                </td>
                                <td style="border: 0px"/>
                                <td style="border: 0px"/>
                                <td style="border: 0px" align="left">
                                    <strong>Generated Date</strong>
                                </td>
                                <td style="border: 0px">:</td>
                                <td style="border: 0px; background-color: #ffffff;" align="right">
                                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <table class="table table-sm table-bordered"
                               style="border:1px solid black; font-size:14px; border-spacing: 1em 0.5em; padding: 0 2em 1em 0; border: 1px solid black; border-radius:2px; text-align: center;">
                            <thead>
                                <th class="text-center"
                                    style="width: 3%; font-weight:bold; background-color: #0048ad; color:#fff;">Sl.No.
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Date
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Salesperson
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Pump Name
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Nozzle Name
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Payment Mode
                                </th>
                                <th class="text-center"
                                    style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                    Amount
                                </th>
                            </thead>
                            <tbody>
                                <t t-set="sub_total" t-value="0"/>
                                <t t-foreach="data" t-as="d">
                                    <tr>
                                        <td width="3%" class="text-center">
                                            <span t-esc="d_index+1"/>
                                        </td>
                                        <td class="text-center">
                                            <t t-if="d['date']">
                                                <span t-esc="d['date']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td class="text-start">
                                            <t t-if="d['sales_person']">
                                                <span t-esc="d['sales_person']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td class="text-start">
                                            <t t-if="d['nozzle']">
                                                <span t-esc="d['nozzle']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td class="text-start">
                                            <t t-if="d['pump']">
                                                <span t-esc="d['pump']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td class="text-start">
                                            <t t-if="d['journal']">
                                                <span t-esc="d['journal']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td class="text-end">
                                            <t t-if="d['amount']">
                                                <span t-esc="d['amount']"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="6" class="text-end">Total</td>
                                    <td class="text-end">
                                        <span t-esc="total"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                                <table style="page-break-inside: avoid;">
                                    <thead>
                                        <th class="text-center"
                                            style="width: 3%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Sl.No.
                                        </th>
                                        <th class="text-center"
                                            style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Payment Mode
                                        </th>
                                        <th class="text-center"
                                            style="width: 10%; font-weight:bold; background-color: #0048ad; color:#fff;">
                                            Total
                                        </th>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="journal_dict" t-as="j">
                                            <t t-if="j_value">
                                                <tr style="page-break-inside: avoid;">
                                                    <td width="3%" class="text-center"
                                                        style="background-color: #ffffff; color:#000000;">
                                                        <span t-esc="j_index+1"/>
                                                    </td>
                                                    <td width="3%" class="text-start"
                                                        style="background-color: #ffffff; color:#000000;">
                                                        <span t-esc="j"/>
                                                    </td>
                                                    <td width="3%" class="text-end"
                                                        style="background-color: #ffffff; color:#000000;">
                                                        <span t-esc="float('%.2f' % j_value)"
                                                              t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                    <t t-else="">
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <h2 align="center">
                            <strong>NO DATA</strong>
                        </h2>
                    </t>
                    <div class="footer" align="right" style="margin-top: 10px; font-size:14px">
                        <div class="text-center" align="center">
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            Page
                            <span class="page"/>
                            of
                            <span class="topage"/>
                            Print Date
                            <strong class="px-2">:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                            <strong class="px-2">:</strong>
                            Print Time
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S')"/>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
