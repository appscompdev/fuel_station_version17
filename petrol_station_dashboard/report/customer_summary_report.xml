<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_customer_summary" model="report.paperformat">
        <field name="name">Customer / Vendor Summary</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="header_spacing">35</field>
        <field name="margin_bottom">25</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="dpi">130</field>
    </record>
    <record id="report_action_customer_summary" model="ir.actions.report">
        <field name="name">Customer / Vendor Summary</field>
        <field name="model">customer.summary.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">petrol_station_dashboard.customer_summary_template</field>
        <field name="report_file">petrol_station_dashboard.customer_summary_template</field>
        <field name="paperformat_id" ref="paperformat_customer_summary"/>
    </record>

    <template id="customer_summary_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <center>
                        <h2>
                            <span>Customer / Vendor Summary Report</span>
                        </h2>
                    </center>
                    <br/>
                    <table class="table table-borderless" style="border: 0px">
                        <tr align="left" style="border: 0px">
                            <td style="border: 0px">
                                <strong>Report From</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td align="right" style="border: 0px">
                                <span t-esc="start_date.strftime('%d-%m-%Y')"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Report To</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="end_date.strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="border: 0px" align="left">
                                <strong>Generated By</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px" align="right">
                                <span t-field="res_company.env.user.name"/>
                            </td>
                            <td style="border: 0px"/>
                            <td style="border: 0px"/>
                            <td style="border: 0px" align="left">
                                <strong>Generated Date</strong>
                            </td>
                            <td style="border: 0px">:</td>
                            <td style="border: 0px; background-color: #ffffff;" align="right">
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                    <h3 align="center">
                        <strong>PURCHASE</strong>
                    </h3>
                    <br/>
                    <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                        <thead style="background-color: #4dd2ff">
                            <th class="text-center p-1 m-1" style="width: 8%; font-weight:bold;
                            background-color: #0048ad; color:#fff;">
                                S.No
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%; font-weight:bold;
                            background-color: #0048ad; color:#fff;">
                                Date
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%; font-weight:bold;
                            background-color: #0048ad; color:#fff;">
                                Purchase Qty
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%; font-weight:bold;
                            background-color: #0048ad; color:#fff;">
                                Price
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%; font-weight:bold;
                            background-color: #0048ad; color:#fff;">
                                Total Amount
                            </th>
                        </thead>
                        <tbody>
                            <t t-foreach="all_all" t-as="dd">
                                <t t-set="s_no" t-value="0"/>
                                <t t-set="total" t-value="0"/>
                                <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                    <td class="p-1 m-1" colspan="5">
                                        <strong t-esc="dd['customer']"/>
                                    </td>
                                </tr>

                                <t t-foreach="dd['all_dic']" t-as="qq">
                                    <tr class="p-1 m-1">
                                        <td class="p-1 m-1" colspan="5">
                                            <div class="row">
                                                <strong class="px-1" style="font-size:17px;">Product</strong>
                                                <strong class="px-2" style="font-size:17px;">:</strong>
                                                <span style="font-size:17px;" t-esc="qq['name']"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <t t-foreach="qq['p_list']" t-as="ww">
                                        <t t-if="ww['purchase_qty']">
                                            <t t-set="s_no" t-value="s_no+1"/>
                                            <t t-set="total" t-value="total + ww['total_price']"/>
                                            <tr class="p-1 m-1" style="page-break-inside: avoid;">
                                                <td style="text-align:right" class="p-1 m-1">
                                                    <span t-esc="s_no"/>
                                                </td>
                                                <td style="text-align:center" class="p-1 m-1"
                                                    t-esc="ww['date'].strftime('%d-%m-%Y')"/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="ww['purchase_qty']"/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['dd_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['total_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                <tr>
                                    <td style="text-align:right" colspan="4">
                                        <strong>TOTAL</strong>
                                    </td>
                                    <td style="text-align:right">
                                        <span t-esc="float('%.2f' % total)"
                                              t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br/>
                    <h3 align="center">
                        <strong>SALE</strong>
                    </h3>
                    <br/>

                    <table class="table table-sm table-bordered mt-4" style="border-color:#000;">
                        <thead style="background-color: #4dd2ff">
                            <th class="text-center p-1 m-1" style="width: 8%;font-weight:bold;
                            background-color: #0048ad;color:#fff;">
                                S.No
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%;font-weight:bold;
                            background-color: #0048ad;color:#fff;">
                                Date
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%;font-weight:bold;
                            background-color: #0048ad;color:#fff;">
                                Purchase Qty
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%;font-weight:bold;
                            background-color: #0048ad;color:#fff;">
                                Price
                            </th>
                            <th class="text-center p-1 m-1" style="width: 8%;font-weight:bold;
                            background-color: #0048ad;color:#fff;">
                                Total Amount
                            </th>
                        </thead>
                        <tbody>
                            <t t-foreach="all_all" t-as="dd">
                                <t t-set="s_no" t-value="0"/>
                                <t t-set="total" t-value="0"/>
                                <tr class="p-1 m-1" style="page-break-inside: avoid;" align="center">
                                    <td class="p-1 m-1" colspan="5">
                                        <strong t-esc="dd['customer']"/>
                                    </td>
                                </tr>

                                <t t-foreach="dd['all_dic']" t-as="qq">
                                    <tr class="p-1 m-1">
                                        <td class="p-1 m-1" colspan="5">
                                            <div class="row">
                                                <strong class="px-1" style="font-size:17px;">Product</strong>
                                                <strong class="px-2" style="font-size:17px;">:</strong>
                                                <span style="font-size:17px;" t-esc="qq['name']"/>
                                            </div>
                                        </td>
                                    </tr>
                                    <t t-foreach="qq['s_list']" t-as="ww">
                                        <t t-if="ww['sale_qty']">
                                            <t t-set="s_no" t-value="s_no+1"/>
                                            <t t-set="total" t-value="total + ww['total_price']"/>
                                            <tr class="p-1 m-1" style="page-break-inside: avoid;">
                                                <td style="text-align:right" class="p-1 m-1">
                                                    <span t-esc="s_no"/>
                                                </td>
                                                <td style="text-align:center" class="p-1 m-1"
                                                    t-esc="ww['date'].strftime('%d-%m-%Y')"/>
                                                <td style="text-align:right" class="p-1 m-1" t-esc="ww['sale_qty']"/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['dd_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                                <td style="text-align:right" class="p-1 m-1"
                                                    t-esc="float('%.2f' % ww['total_price'])"
                                                    t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                                <tr>
                                    <td style="text-align:right" colspan="4">
                                        <strong>TOTAL</strong>
                                    </td>
                                    <td style="text-align:right">
                                        <span t-esc="float('%.2f' % total)"
                                              t-options='{"widget": "monetary", "display_currency": request.env.company.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
